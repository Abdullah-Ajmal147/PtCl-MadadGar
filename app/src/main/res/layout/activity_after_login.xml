<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.After_login">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#fde700"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Button_nav"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="start|center_vertical"
                    android:src="@drawable/nav_icon" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/splash_logo" />


            </FrameLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#FFF8E74B"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:visibility="gone"
                app:logo="@drawable/splash_logo"
                app:navigationIcon="@drawable/clear_all">

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="22dp"
                android:text="Welcome"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#191818"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layoutbelow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome"
                android:layout_alignBottom="@+id/welcome"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="-2dp"
                android:layout_marginBottom="-23dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/person" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="ALI JOHAR"
                    android:fontFamily="@font/poppins_bold"
                    android:textAllCaps="true"
                    android:textColor="#191818"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layoutbelow"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/backgroud"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/bg_edit_text">
                    <ImageView
                        android:id="@+id/txtRadio"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/rws"
                         />
</FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/bg_edit_text">
                    <ImageView
                        android:id="@+id/txtTransport"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                         android:src="@drawable/tn"
                         android:layout_gravity="center"
                       />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/bg_edit_text">

                    <ImageView
                        android:id="@+id/txtMetro"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:src="@drawable/mt"
                        android:layout_gravity="center"
                         />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/bg_edit_text">
      <ImageView
          android:id="@+id/txtPower"
          android:layout_width="250dp"
          android:layout_height="60dp"
          android:src="@drawable/pp"
          android:layout_gravity="center"
          />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/bg_edit_text">
                    <ImageView
                        android:id="@+id/txtSwitich"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:src="@drawable/sw"
                        android:layout_gravity="center" />
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        />
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <Button
                android:id="@+id/btnhelpCenter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:background="#0289fc"
                android:gravity="center"
                android:text="@string/help"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:fontFamily="@font/poppins_bold"
                android:textSize="15dp"

                />

            <ImageView
                android:id="@+id/btmimg"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_above="@+id/btnhelpCenter"
                android:layout_alignParentBottom="true"
                android:src="@drawable/bar" />
        </RelativeLayout>
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#E4ECEB"
        android:fitsSystemWindows="true">
        <include layout="@layout/nav_layout"/>
    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>