<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_us_bg"
    android:id="@+id/Drawer_about"
    tools:context=".activities.About_Us">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <FrameLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fde700"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Button_nav"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginStart="6dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/nav_icon" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/splash_logo" />


    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="About us"
        android:fontFamily="@font/poppins_bold"
        android:textSize="35dp"
        android:textColor="#040404"
        android:gravity="center"
        />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/aboutus_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/About_Us"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#090909"
                android:textSize="15dp"
                />
        </FrameLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
    <Button
        android:id="@+id/btnhelpCenter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:background="#0289fc"
        android:gravity="center"
        android:text="@string/help"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:fontFamily="@font/poppins_bold"
        android:textSize="15dp"

        />

    <ImageView
        android:id="@+id/btmimg"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/btnhelpCenter"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bar" />
    </RelativeLayout>
    </FrameLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#E4ECEB"
        android:fitsSystemWindows="true">
        <include layout="@layout/nav_layout"/>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>