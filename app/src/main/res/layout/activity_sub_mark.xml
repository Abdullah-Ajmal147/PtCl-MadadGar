<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/Drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroudsubcategory"
    tools:context=".activities.Sub_Mark">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <FrameLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#fde700"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Button_nav"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="6dp"
                android:src="@drawable/nav_icon" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/splash_logo" />


        </FrameLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFF8E74B"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:logo="@drawable/splash_logo"
        app:navigationIcon="@drawable/clear_all"
        android:visibility="gone"
        >

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/txtName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="40dp"

        android:layout_marginTop="22dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text=""
        android:textColor="#191818"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:text="Following are the training module, choose and learn"
        android:textColor="#555353"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <Button
        android:id="@+id/btnhelpCenter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:background="#0289fc"
        android:gravity="center"
        android:text="@string/help"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:fontFamily="@font/poppins_bold"
        android:textSize="15dp"
        />

    <ImageView
        android:id="@+id/btmimg"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/btnhelpCenter"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myrecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnhelpCenter"
        android:layoutAnimation="@anim/layout_animation"
        android:layout_below="@+id/txtInformation"
       />
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#E4ECEB"
        android:fitsSystemWindows="true">
        <include layout="@layout/nav_layout"/>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>