<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.User_for_Approval">

    <FrameLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#fde700"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Button_nav"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginStart="6dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/nav_icon" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/splash_logo" />
    </FrameLayout>
    <TextView
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="22dp"
        android:text="Hi, Admin"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#191818"
        android:textSize="24dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/admin"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-2dp"
        android:text="Welcome to the Step-up\nAdmin Screen"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#A8555353"
        android:textSize="18dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1291fc"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do You Wanna Approve?"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/shadow_color"
            android:fontFamily="@font/poppins_extrabold"
            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/shadow_color"
            android:textSize="20dp"
            />
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Ali Johar"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/shadow_color"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee No: "
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/shadow_color"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtEmpl_No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" E123786"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/shadow_color"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Region: "
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/shadow_color"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" LHR"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/shadow_color"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domina: "
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/shadow_color"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtdomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Power Plant"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/shadow_color"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/shadow_color"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" alijohar@gmail.com"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/shadow_color"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password: "
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/shadow_color"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 123ght"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/shadow_color"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: "
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/shadow_color"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/txtContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text=" 03088743044"
                android:textColor="@color/shadow_color"
                android:textSize="20dp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/btnYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_no_yes_"
            android:text="Yes"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:textColor="#1291fc"
            />
            <Button
                android:id="@+id/btnNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_no_yes_"
                android:layout_marginStart="100dp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:text="No"
                android:textColor="#1291fc"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20sp"
            ></View>
    </LinearLayout>
</LinearLayout>

</androidx.core.widget.NestedScrollView>