<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ques_bg"
    tools:context=".activities.QuizActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/quizDivider"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fde700"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Button_nav"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginStart="6dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/nav_icon" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/splash_logo" />


    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Question"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizDivider">

        <TextView
            android:id="@+id/question"
            android:layout_width="385dp"
            android:layout_height="261dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/quiz_container"
            android:fontFamily="@font/poppins_bold"
            android:hint="What was the nationality of 'Juilian Assange' who founded WikiLeaks in 2006"
            android:paddingLeft="24dp"
            android:paddingTop="20dp"
            android:gravity="center"
            android:paddingRight="24dp"
            android:textColor="#202020"
            android:textSize="24dp"

            app:layout_constraintBottom_toTopOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Question"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">


        <TextView
            android:id="@+id/optOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_bold"
            android:hint="hdfssagdf "
            android:maxLines="2"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="textStart"
            android:textColor="#202020"
            android:textSize="22dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#b9b9b9"/>

        <TextView
            android:id="@+id/optTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins_bold"
            android:hint="hdfssagdf "
            android:maxLines="2"
            android:paddingLeft="30dp"
            android:textColor="#202020"
            android:textAlignment="textStart"
            android:textSize="22dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#b9b9b9"/>


        <TextView
            android:id="@+id/optThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:hint="hdfssagdf "
            android:maxLines="2"
            android:paddingLeft="30dp"
            android:textColor="#202020"
            android:textAlignment="viewStart"
            android:textSize="22dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#b9b9b9"/>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="286dp"
        android:layout_marginEnd="207dp"
        android:layout_marginBottom="397dp"
        android:backgroundTint="@color/yallow_dark"
        android:progressBackgroundTint="@color/yallow_dark"
        android:progressTint="@color/yallow_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="81dp"
        android:layout_height="168dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="330dp"
        android:layout_marginBottom="563dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="265dp" />
    <ImageView
        android:id="@+id/btmimg"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bar" />

</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#E4ECEB"
        android:fitsSystemWindows="true">
        <include layout="@layout/nav_layout"/>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>