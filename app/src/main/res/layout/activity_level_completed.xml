<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_level_complete"
    tools:context=".activities.QuizActivity">

    <View
        android:id="@+id/quizDivider"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/yallow_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/leveCompleted"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizDivider" />


    <LinearLayout
        android:id="@+id/hasil_karda_number"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/leveCompleted"
        app:layout_constraintStart_toStartOf="@+id/leveCompleted"
        app:layout_constraintTop_toBottomOf="@+id/leveCompleted">

        <ImageView
            android:id="@+id/starOne"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_star_border_black_24dp"></ImageView>
        <ImageView
            android:id="@+id/starTwo"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_star_border_black_24dp"></ImageView>
        <ImageView
            android:id="@+id/starThree"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_star_border_black_24dp"></ImageView>
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_login_btn"
        android:fontFamily="@font/dubai_bold"
        android:padding="16dp"
        android:text=" اگلا درجہ"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelIcon" />

    <ImageView
        android:id="@+id/levelIcon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hasil_karda_number"
         />

</androidx.constraintlayout.widget.ConstraintLayout>